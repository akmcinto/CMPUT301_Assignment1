<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gotoReactionTimeButton"
        android:text="@string/gotoReactionTimeButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:onClick="reactionTimer"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gotoBuzzerButton"
        android:text="@string/gotoBuzzerButton"
        android:layout_below="@+id/gotoReactionTimeButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="64dp"
        android:layout_alignRight="@+id/gotoReactionTimeButton"
        android:layout_alignEnd="@+id/gotoReactionTimeButton"
        android:onClick="buzzerPlayerSelect"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gotoStatisticsButton"
        android:text="@string/gotoStatisticsButton"
        android:layout_below="@+id/gotoBuzzerButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="64dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="displayStatistics"/>

</RelativeLayout>
