<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="TimerButtonClicked">

    <!-- Bill, http://stackoverflow.com/questions/432037/how-do-i-center-text-horizontally-and-vertically-in-a-textview-in-android, 2015-09-30 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/clickMessage"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:elegantTextHeight="true"
        android:visibility="visible"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reactionButton"
        android:id="@+id/reactionButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="TimerButtonClicked"
        android:height="150dp"
        android:width="300dp"
        android:background="@android:color/holo_blue_light"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="30dp"/>



</RelativeLayout>